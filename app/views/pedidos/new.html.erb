<% content_for :subtitulo do %>
  Crear Pedido
<% end %>

<div class="col-md-12">
  <%= form_for (@pedido) do |f| %>
  <% if @pedido.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h2><center>!Error al crear el Pedido!</center></h2>
      <ul>
      <% @pedido.errors.each_with_index do |msg| %>
        <li><strong><%= msg[1] %></strong></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-7">
      <div class="well">
        <h4>Pedido para:
          <%= f.collection_select(:proveedore_id, Proveedore.all, :id, :nombre, prompt: "Seleccione Titular del área") %>
        </h4><br>
        <table>
          <thead class="header-table">
            <tr>
              <th>
                <center>Código Artículo</center>
              </th>
              <th>
                <center>Cantidad</center>
              </th>
              <th>
                <center>Observacion</center>
              </th>
            </tr>
          </thead>

          <tbody>
         
            <%= f.fields_for :detallepedidos do |detalle| %>
            <tr>
              <td>
               <%= detalle.collection_select(:insumo_id, Insumo.all, :id, :descripcion, prompt: "") %>
               
              </td>
              <td>
                <%= detalle.text_field :solicitado %>
              </td>
              <td>
                <%= detalle.text_field :surtido %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table><br>
        <%= button_tag( :class => "btn btn-success") do %>
          <i class="glyphicon glyphicon-floppy-disk"></i> Guardar
        <% end %>
        <%= link_to pedidos_path, class:"btn btn-primary" do%>
        <i class="glyphicon glyphicon-repeat"></i> Regresar
        <% end %>
      </div>
    </div>
    <%= f.hidden_field :codigo, :value => @codigo %>
    <%= f.hidden_field :usuario_id, :value => current_usuario.id %>
  <% end %>
  </div>
</div>
