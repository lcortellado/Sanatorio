<div class="row">
    <div class="col-md-12">
       <div class="panel panel-default">
		  <div class="panel-heading">
		   <h3 class="panel-title"><strong>Detalles Ciudades</strong></h3>   </div>
              <div class="panel-body">

    <div class="row">
       <div class="col-xs-6">
          <div class="col-xs-6">
            <address>
               <strong>Nombre:</strong>
           </div>
               <%= @ciudade.nombre %>
            </address>
           </div>
        </div>

<div class="row">
     <div class="col-xs-6">
        <div class="col-xs-6">
           <address>
             <strong>Departamento:</strong>
        </div>
             <%= @ciudade.departamento.nombre %>
           </address>
     </div>
 </div>
 
<div class="row">
   <div class="col-xs-6">
      <div class="col-xs-6">
          <address>
            <strong>Region:</strong>
      </div>
            <%= @ciudade.departamento.regione.nombre %>
          </address>
   </div>
</div>

<div class="row">
    <div class="col-xs-6">
        <div class="col-xs-6">
           <address>
           <strong>Fecha Creacion:</strong>
        </div>
           <%= @ciudade.created_at.strftime("%d/%m/%Y")  %>
           </address>
    </div>
</div>

 <div class="row">
     <div class="col-xs-6">
         <div class="col-xs-6">
           <address>
             <strong>Fecha Modificacion:</strong>
         </div>
             <%= @ciudade.updated_at.strftime("%d/%m/%Y")  %>
            </address>
     </div>
 </div>

<div class="form-group row">
    <div class="col-xs-10">
       <div class="col-xs-7">
    </div>
<%= link_to 'Editar', edit_ciudade_path(@ciudade) %> |
<%= link_to 'Atras', ciudades_path %>
<%= link_to "Download Receipt", ciudade_path(@ciudade, format: :pdf) %>
 </div>
</div>