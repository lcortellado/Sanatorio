<p id="notice"><%= notice %></p>


<div class="container-fluid">
  <div class="panel panel-default">
  <div class="panel-heading">MEDICOS</div>
  <div class="panel-body">
 
 <div>
   <h3>
    Hoy es: 
    <%= Time.now.strftime("%d-%m-%y")%>
     </h3>
     
    <h3>Semana de del Año
    <%= Time.now.strftime("N° %V")%> </h3>

     <h3>Hora
    <%= Time.now.strftime("%R")%> </h3>
 </div>

     <div class="col-md-5 col-md-offset-5 col-sm-5 col-sm-offset-5">
      <p>
        <%= link_to  new_medico_path, remote: true, class: "btn btn-success" do %> 
   <span class="glyphicon glyphicon-plus" aria-hidden="true"> </span> Registrar Medico
    <% end %>
      <%= link_to  new_especialidade_path, remote: true, class: "btn btn-success" do %> 
   <span class="glyphicon glyphicon-plus" aria-hidden="true"> </span> Nueva Especialidad
    <% end %>
      </p>
    </div>
</div>
<div class="table-responsive">
 <table class="table table-condensed">
  <thead>
    <tr>
     <th></th>
      <td><strong>Cedula</td>
     
      <td><strong>Nombre</strong></td>
      <td><strong>Apellido</strong></td>
      <td><strong>Direccion</strong></td>
      <td><strong>F Naci</strong></td>
      <td><strong>Telefono</td>
      <td><strong>Celular</strong></td>
     
      <td><strong>Correo</strong></td>
     
      <td><strong>Especialidad</strong></td>
       <td><strong>Fecha Creacion</strong></td>
        <td><strong>Fecha Modificacion</strong></td>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @medicos.each do |medico| %>
      <tr>
        <td>
          <%= button_to medico_path(medico), {method: :get, class: "btn btn-info"} do %>
            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"> </span> Ver
          <% end %>
        </td>
        <td><%= medico.ci %></td>
       
        <td><%= medico.nombre %></td>
        <td><%= medico.apellido %></td>
        <td><%= medico.direccion %></td>
         <td><%= medico.fecha %></td>
        <td><%= medico.telefono %></td>
        <td><%= medico.celular %></td>
       
        <td><%= medico.correo %></td>
      
        <td><%= medico.especialidade.descripcion %></td>
        <td><%= medico.created_at.strftime("%d/%m/%Y") %></td>
        <td><%= medico.updated_at.strftime("%d/%m/%Y") %></td>
       
        
       <td> <%= link_to edit_medico_path(medico), remote: true, class: "btn btn-info" do %>
       <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Editar
      <% end %> </td>
       <td>
          <%= button_to medico, { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Eliminar
          <% end %>
        </td>
      </tr>
    <% end %>
  </div>
 </tbody>
 
</table>
 <tr>
   <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
  </tr>