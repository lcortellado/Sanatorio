<div class="container-fluid">
  <div class="panel panel-default">
  <div class="panel-heading">Especialidades</div>
  <div class="panel-body">
<table class="table">
 <thead>
  
  <tr>
   <th></th>
   
   <th>Descripcion</th>
   <th>Fecha de Alta</th>
   <th>Fecha de Modificación</th>
   <th colspan="2"></th>
  </tr>
 
 </thead>

 <tbody>
  <div id="especialidades">
   <% @especialidades.each do |especialidade| %>
    <tr>
    <td>
          <%= button_to especialidade_path(especialidade), {method: :get, class: "btn btn-info"} do %>
            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"> </span> Ver
          <% end %>
        </td>
  
     <td><%= especialidade.descripcion %></td>
     <td><%= especialidade.created_at.strftime("%d/%m/%Y") %></td>
     <td><%= especialidade.updated_at.strftime("%d/%m/%Y") %></td>
     
     <td> <%= link_to edit_especialidade_path(especialidade), remote: true, class: "btn btn-info" do %>
       <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Editar
      <% end %> </td>
     
    
     <td>
      <%= button_to especialidade, { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
       <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Eliminar
      <% end %>
     </td>
    </tr>
   <% end %>
  </div>
 </tbody>
 
</table>
 <tr>
   <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
  </tr>