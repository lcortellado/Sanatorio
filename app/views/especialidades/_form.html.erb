<div id="departamento-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><%= title %></h4>
      </div>
<%= form_for @especialidade, remote: true do |form| %>

  <div class="modal-body">
  <div class="form-group row">
  <div class="col-xs-3">
    <%= form.label :descripcion %>
     </div>
 <div class="col-xs-5">
    <%= form.text_field :descripcion, autofocus: true, placeholder: "", class: "form-control" %>
 
 </div>
  </div>

 <div class="form-group row">
  <div class="col-xs-10">
   <div class="col-xs-7">
    </div>
   <%= form.submit "Aceptar", class: "btn btn-success" %>
   <%= link_to 'Cancelar', especialidades_path, class: "btn btn-success" %>
   </div>
    </div>
<% end %>
 </div>
  </div>
</div>
</div>
