
    <div class="modal-body">
      <%= form_for :compra_details, url: compra_compra_details_url, method: :post, remote: true do |f| %>
        <div class="row">
          <div class="col-xs-5">
            <div class="form-group">
                 <%= f.label :insumo_id, class: "sr-only" %>
                
    <%= f.collection_select(:insumo_id, Insumo.all, :id, :descripcion, prompt: "Insumos", class: "form-control") %> 
                
            </div>
          </div>
          <div class="col-xs-2">
            <div class="form-group">
                <%= f.label :qty, class: "sr-only" %>
                <%= f.text_field :qty, placeholder: "Cant.", class: "form-control" %>
            </div>
          </div>
          <div class="col-xs-2">
            <div class="form-group">
                <%= f.label :price, class: "sr-only" %>
                <%= f.text_field :price, placeholder: "Precio", class: "form-control" %>
            </div>
          </div>
          <div class="col-xs-2">
            <div class="form-group">
                <%= f.label :subtotal, class: "sr-only" %>
                <%= f.text_field :subtotal, placeholder: "0", class: "form-control", disabled: true %>
            </div>
          </div>
        </div>
        
          <%= f.submit "Aceptar", class: "btn btn-primary" %>
      <% end %>
    </div>
    <div class="modal-footer">
      <%= link_to "Cancelar", "#", class: "btn btn-danger", "data-dismiss": "modal" %>
    </div>